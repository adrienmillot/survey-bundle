<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="amillot\SurveyBundle\Entity\AbstractSurvey" repository-class="amillot\SurveyBundle\Repository\SurveyRepository">
        <id name="id" type="string" column="id">
            <generator strategy="UUID"/>
        </id>

        <field name="label" column="label" type="text" />

        <many-to-one field="author" target-entity="amillot\SurveyBundle\Model\SurveySubjectInterface" inversed-by="surveys">
            <join-column name="author_id" referenced-column-name="id" />
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
